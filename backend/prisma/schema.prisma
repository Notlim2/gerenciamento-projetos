generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:../../../../db/dev.db"
}

model Project {
  id          Int       @id @default(autoincrement())
  name        String
  description String?
  createdAt   DateTime  @map("created_at")
  updatedAt   DateTime? @map("updated_at")
  Task        Task[]

  @@map("project")
}

enum TaskStatus {
  PENDING
  IN_PROGRESS
  COMPLETED
  CANCELED
  BLOCKED
}

model Task {
  id          Int        @id @default(autoincrement())
  name        String
  description String?
  status      TaskStatus
  projectId   Int        @map("project_id")
  project     Project    @relation(fields: [projectId], references: [id])
  createdAt   DateTime   @map("created_at")
  updatedAt   DateTime?  @map("updated_at")

  @@map("task")
}
